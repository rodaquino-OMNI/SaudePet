{
  "name": "petvet-ai",
  "version": "1.0.0",
  "private": true,
  "description": "PetVet AI - WhatsApp-first veterinary virtual assistant platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "test:whatsapp-handler": "npm run test -w packages/whatsapp-handler",
    "test:api": "npm run test -w packages/api",
    "db:migrate": "npm run db:migrate -w packages/api",
    "db:seed": "npm run db:seed -w packages/api",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.py": [
      "black",
      "ruff check --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SaudePet/petvet-ai.git"
  },
  "author": "SaudePet Team",
  "license": "MIT"
}
